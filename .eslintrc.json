{
	"extends": [
		"eslint:all",
		"airbnb"
	],
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {
		"comma-dangle": ["error", {
			"arrays": "always",
			"objects": "never",
			"imports": "always",
			"exports": "always",
			"functions": "ignore"
		}],
		"global-require": "off",
		"indent": ["off", "tab"],
		"linebreak-style": "off",
		"no-console": "off",
		"no-tabs": "off",
		"no-var": "off",
		"object-shorthand": "off",
		"one-var": "off",
		"prefer-arrow-callback": "off",
		"prefer-template": "off"
	}
}