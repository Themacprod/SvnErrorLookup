{
	"extends": [
		"eslint:all",
		"airbnb"
	],
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {
		"comma-dangle": ["error", {
			"arrays": "always",
			"objects": "never",
			"imports": "always",
			"exports": "always",
			"functions": "ignore"
		}],
		"func-names": ["error", "as-needed"],
		"global-require": "off",
		"indent": ["error", 4],
		"linebreak-style": ["error", "windows"],
		"no-console": ["error", { "allow": ["warn", "error"] }],
		"no-var": "off",
		"object-shorthand": "off"
	}
}